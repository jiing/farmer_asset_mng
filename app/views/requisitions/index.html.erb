<h1>申請書列表</h1>

<table>
  <tr>
    <th>申請書編號</th>
    <th>戶名</th>
    <th>調閱日</th>
    <th>調閱原因</th>
    <th>調閱人</th>
    <th>分類</th>
    <th>是否調閱中</th>
    <th>備註</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @requisitions.each do |requisition| %>
  <tr>
    <td><%= requisition.req_id %></td>
    <td><%= requisition.account_name %></td>
    <td><%= l(requisition.borrowed_at, :format=>:short) %></td>
    <td><%= requisition.reason.content %></td>
    <td><%= requisition.user.name %></td>
    <td><%= requisition.category.name %></td>
    <td><%= requisition.is_borrowed %></td>
    <td><%= requisition.note %></td>

    <td><%= link_to 'Show', requisition %></td>
    <td><%= link_to 'Edit', edit_requisition_path(requisition) %></td>
    <td><%= link_to 'Destroy', requisition, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

